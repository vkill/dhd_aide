{
  "manifest_version": 2,
  "name": "dhd_aide chrome extension",
  "version": "1.0.0",
  "description": "dhd_aide chrome extension",
  "icons": {
    "128": "icon/icon128.png",
    "48": "icon/icon48.png",
    "16": "icon/icon16.png"
  },
  "browser_action": {
    "default_icon": "icon/icon19.png",
    "default_title": "dhd_aide",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["*://game.37.com/play.php?game_id=292&sid=*"],
      "js": ["content_37wan.js"],
      "run_at": "document_end"
    }
  ],
  "offline_enabled": false,
  "options_page": "options.html",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.37.com/*"
  ]
}
